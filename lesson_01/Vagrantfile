# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
    config.vm.box = "centos/7"

    config.vm.define "centos7" do |web|
        web.vm.hostname = "centos7"

        config.vm.provider "virtualbox" do |web|
            web.name = "centos7"
            web.cpus = 2
            web.memory = "1024"
        end

        web.vm.provision "shell", path: "script.sh"
    end
end
