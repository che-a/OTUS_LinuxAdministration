# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

    config.vm.define "srv.otus" do |subconfig|
        subconfig.vm.box = "centos/7"
        subconfig.vm.hostname = "srv.otus"
        subconfig.vm.network "private_network", ip: "192.168.1.10"
        subconfig.vm.network "forwarded_port", guest: 80, host: 8080

        subconfig.vm.provider "virtualbox" do |vb|
            vb.name = "les06-srv.otus"
            vb.cpus = 2
            vb.memory = "1024"
        end

        subconfig.vm.provision "shell", inline: <<-SHELL
            cp /vagrant/master.sh /home/vagrant
            ./master.sh
        SHELL
    end

#    config.vm.define "slave" do |subconfig|
#        subconfig.vm.box = "centos/7"
#        subconfig.vm.hostname = "slave"
#        subconfig.vm.network "private_network", ip: "192.168.1.200"

#        subconfig.vm.provider "virtualbox" do |vb|
#            vb.name = "les06-slave"
#            vb.cpus = 1
#            vb.memory = "1024"
#        end

#        subconfig.vm.provision "shell", inline: <<-SHELL
#            cp /vagrant/slave.sh /home/vagrant
#            ./slave.sh
#        SHELL
#    end

end
