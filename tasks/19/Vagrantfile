# -*- mode: ruby -*-
# vim: set ft=ruby :

hosts = {
    :"client" => {
        :box_name => "centos/7",
        :cpu => '1',
        :ram => "512",
        :ip_addr => '192.168.50.20'
    },
    :"server" => {
        :box_name => "centos/7",
        :cpu => '2',
        :ram => "2048",
        :ip_addr => '192.168.50.10',
        :port80 => '8080',
        :port443 => '8443'
    }
}

Vagrant.configure("2") do |config|

    hosts.each do |boxname, boxconfig|

        config.vm.define boxname do |box|
            box.vm.box = boxconfig[:box_name]
            box.vm.host_name = boxname.to_s
            box.vm.network "private_network", ip: boxconfig[:ip_addr]

            case boxname.to_s
            when "server"
                box.vm.network "forwarded_port", guest: 80, host: boxconfig[:port80]
                box.vm.network "forwarded_port", guest: 443, host: boxconfig[:port443]
            end

            box.vm.provider :virtualbox do |vb|
                vb.cpus = boxconfig[:cpu]
                vb.memory = boxconfig[:ram]
                vb.name = "che-les19-" + "%s" % boxname
            end

            box.vm.provision "shell", path: "provision.sh"
        end
    end
end
